<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ncu.outpatient.mapper.PatientMapper">

    <resultMap id="BaseResultMap" type="com.ncu.drug.pojo.Drug">
        <id column="drug_id" jdbcType="VARCHAR" property="drugId" />
        <result column="drug_name" jdbcType="VARCHAR" property="drugName" />
        <result column="drug_code" jdbcType="INTEGER" property="drugCode" />
        <result column="unit" jdbcType="VARCHAR" property="unit" />
        <result column="drug_catalog" jdbcType="VARCHAR" property="drugCatalog" />
        <result column="price" jdbcType="DOUBLE" property="price" />
        <result column="storage" jdbcType="INTEGER" property="storage" />
        <result column="del_flag" jdbcType="CHAR" property="delFlag" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
    </resultMap>

    <sql id="Base_Column_List">
    drug_id,drug_name,drug_code,unit,drug_catalog,price,storage,del_flag,remark
  </sql>


    <!--批量插入药品-->
    <insert id="insertBatch" parameterType="java.util.List">
        insert into drug_info values
        <foreach collection="drugList" item="drug" index="index" separator=",">
            (#{drug.drugId},#{drug.drugName},#{drug.drugCode},#{patient.unit},
            #{drug.drugCatalog},#{drug.price},#{drug.storage},#{drug.delFlag},#{patient.remark})
        </foreach>
    </insert>
    <!--批量删除药品-->
    <delete id="deleteBatch" parameterType="java.util.List">
        delete from drug_info where drug_id in
        <foreach collection="ids" item="id" open="(" close=")" index="index" separator=",">
            #{id}
        </foreach>
    </delete>


</mapper>